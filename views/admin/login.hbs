<section style="background-color:  rgb(234, 237, 237); min-height: 67rem;"  >
    <div class="container">
        <div class="row">
          <h2 class="text-center mt-5" style="font-weight: bold;">Admin-Login</h2>
                    {{#if loginErr}}
          <p style="color: #ff0000;"  class="text-center">{{loginErr}}</p>
          {{/if}}
            <form action="/admin/login" method="POST"  style="max-width: 400px; margin:auto;">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
  </div>
  <button type="submit" class="btn btn-primary" style="margin: 0 auto; display:block;">Submit</button>
</form>
        </div>
    </div>
</section>