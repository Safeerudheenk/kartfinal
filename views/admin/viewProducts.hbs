

<section style="background-color:  rgba(234, 237, 237, 0.562); min-height: 67rem; "  >
    <div class="container">
        <div class="row" >
            <div class="mt-4" >
               <a href="/admin/addProduct" class="btn btn-success" >Add product</a> 
            </div>
            <table id="productTable" class="table mt-5 " style="counter-reset: rowNumber;">
  <thead>
    <tr  >
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products }}
    <tr>
      <td><img class="small" style="width: 50px; height: 50px;" src="/images/{{this._id}}.jpg"></td>
      <td>{{this.name}}</td>
      <td><a class="btn btn-primary" href="/productDetails/{{this._id}}">Details</a></td>
      <td><a href="/admin/editProduct/{{this._id}}" class="btn btn-primary" >Edit</a></td>
      <td><a href="/admin/deleteProduct/{{this._id}}" class="btn btn-danger" onclick=" return confirm('are you sure')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
        </div>
    </div>
</section>


<script>
  $(document).ready( function () {
    $('#productTable').DataTable();
} );
</script>